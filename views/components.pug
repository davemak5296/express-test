mixin btn(ele, text)
    - var cls="mt-2.5 py-2.5 px-8 rounded-md bg-white text-black border border-solid border-sky-200 no-underline"
    if ele == 'a'
        a(class=cls)= text
    else if ele == 'input'
        input(type='submit', value='提交', class=cls)


mixin h1(text)
    h1(class='text-3xl my-5 font-semibold')= text

mixin h3(text)
    h3(class='text-xl my-4 font-semibold')= text

mixin hr()
    div(class='my-5 mx-auto h-px max-w-[95%] bg-[#999] opacity-50')

mixin warning()
    header(class='bg-red-200 text-red-700 p-2.5 text-center text-lg')
        strong 注意！本站為練習用網站，因教學用途刻意忽略資安的實作，註冊時請勿使用任何真實的帳號或密碼。

mixin form-input(item, type, name)
    div(class='mb-2.5')
        span=item
        input(type=type, name=name, class='p-px border border-solid border-sky-200')